record(bi, "BPM:FRONTEND$(number):switch:read"){
	field(DTYP,"LPCBi")
	field(DESC,"switch")
	field(ZNAM, "OFF")
	field(ONAM, "ON")
	field(SCAN,"$(SCAN=1 second)")
	field(INP,"@$(number)")
}
record(bo, "BPM:FRONTEND$(number):switch:write"){
	field(DTYP,"LPCBo")
	field(DESC,"switch")
	field(ZNAM, "OFF")
	field(ONAM, "ON")
	field(SCAN,"Passive")
	field(OUT,"@$(number)")
}
record(ai, "BPM:FRONTEND$(number):setpoint:read")
{
	field(DTYP, "LPCAi")
	field(DESC, "Temperature setpoint")
	field(SCAN, "1 second")
	field(INP, "@$(number)")
	field(PREC, "3")
	field(EGU, "Celsius")
	field(LINR, "NO CONVERSION")
}
record(ao, "BPM:FRONTEND$(number):setpoint:write")
{
	field(DTYP, "LPCAo")
	field(DESC, "Temperature setpoint")
	field(SCAN, "1 second")
	field(INP, "@$(number)")
	field(PREC, "3")
	field(EGU, "Celsius")
	field(LINR, "NO CONVERSION")
}


