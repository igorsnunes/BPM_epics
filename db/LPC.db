record(bi, "BPM:FRONTEND$(number):switch:read"){
	field(DTYP,"LPCBi")
	field(DESC,"switch")
	field(ZNAM, "OFF")
	field(ONAM, "ON")
	field(SCAN,"$(SCAN=1 second)")
	field(INP,"@$(number).$(variableID=0)")
}
record(bo, "BPM:FRONTEND$(number):switch:write"){
	field(DTYP,"LPCBo")
	field(DESC,"switch")
	field(ZNAM, "OFF")
	field(ONAM, "ON")
	field(SCAN,"Passive")
	field(OUT,"@$(number).$(variableID=0)")
}
record(ai, "BPM:FRONTEND$(number):setpoint:read")
{
	field(DTYP, "LPCAi")
	field(DESC, "Temperature setpoint")
	field(SCAN,"$(SCAN=1 second)")
	field(INP, "@$(number).$(variableID=1)")
	field(PREC, "3")
	field(EGU, "Celsius")
	field(LINR, "NO CONVERSION")
}
record(ao, "BPM:FRONTEND$(number):setpoint:write")
{
	field(DTYP, "LPCAo")
	field(DESC, "Temperature setpoint")
	field(OUT, "@$(number).$(variableID=1)")
	field(PREC, "3")
	field(SCAN,"Passive")
	field(EGU, "Celsius")
	field(LINR, "NO CONVERSION")
	field(PINI, "YES")
}

