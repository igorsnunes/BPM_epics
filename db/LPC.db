record(bi, "BPM:FRONTEND$(number):switch:read"){
	field(DTYP,"LPCBi")
	field(DESC,"switch")
	field(ZNAM, "OFF")
	field(ONAM, "ON")
	field(SCAN,"$(SCAN=1 second)")
	field(INP,"@$(number).$(variableID=0).$(nbytes=1)")
}
record(bo, "BPM:FRONTEND$(number):switch:write"){
	field(DTYP,"LPCBo")
	field(DESC,"switch")
	field(ZNAM, "OFF")
	field(ONAM, "ON")
	field(SCAN,"Passive")
	field(OUT,"@$(number).$(variableID=0).$(nbytes=1)")
}
record(ai, "BPM:FRONTEND$(number):setpoint:read")
{
	field(DTYP, "LPCAi")
	field(DESC, "Temperature setpoint")
