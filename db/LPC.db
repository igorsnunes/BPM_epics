record(bi, "BPM:FRONTEND$(number):switch:read"){
	field(DTYP,"LPCBi")
	field(DESC,"switch")
	field(ZNAM, "OFF")
	field(ONAM, "ON")
	field(SCAN,"$(SCAN=1 second)")
	field(INP,"@$(number)")
}

record(bo, "BPM:FRONTEND$(number):switch:write"){
	field(DTYP,"LPCBo")
	field(DESC,"switch")
	field(ZNAM, "OFF")
	field(ONAM, "ON")
	field(SCAN,"Passive")
	field(OUT,"@$(number)")
}
